<% page_title @revision.title %>

<!-- Start Revision Post -->
	<div class="card card-default">
		<div class="card-header">
			<h2><strong><%= @revision.title %></strong> <!--<div class="pull-right"><% link_to "Go Back", revisions_path %></div>--></h2>

		</div>

		<div class="card-body">
			<p>
				<%=  markdownify(@revision.text) %>
			</p>
			<hr />
			<p>
			<div class="pull-right">
				<i class="fa fa-user"></i> <strong>
					<%= @revision.user.username %>

				</strong> | <i class="fa fa-clock-o"></i> Posted <strong><%= local_time_ago(@revision.created_at) %></strong>
			</div>
			<% if current_user.try(:admin?) %>
				<%= link_to edit_revision_path(@revision) do %>
					<i class="fa fa-pencil-square-o"></i> Edit
				<% end %>
				&nbsp; | &nbsp;
				<%= link_to revision_path(@revision), method: :delete,
            		  data: { confirm: 'Are you sure?' } do %>
					<i class="fa fa-trash-o"></i> Delete
				<% end %>
			<% end %>
		</div>
	</div>
	<!-- End of Revisions Post -->
 	<%= link_to raw("Back to Revisions"), revisions_path, :class => "btn btn-primary btn-lg btn-block" %>

<hr />