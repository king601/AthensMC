<% page_title "Create Account" %>


<div class="container">
  <div class="text-center my-5">
    <%= link_to(root_path) do %>
      <%= image_tag("athensLogo.png", class: "d-block mx-auto mb-4", width: 250) %>
    <% end %>
    <h3 class="o-75">Create your account</h3>
  </div>

  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card card-body mb-3">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :username %>
            <%= f.text_field :username, autofocus: true, class: "form-control", placeholder: "Enter a username" %>
            <%= error_message_on(f.object, :username) %>
          </div>

          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, autofocus: false, class: "form-control", placeholder: "yourname@example.com" %>
            <%= error_message_on(f.object, :email) %>
          </div>

          <div class="form-group">
            <%= f.label :password %>
            <% if @validatable %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
            <%= error_message_on(f.object, :password) %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
            <%= error_message_on(f.object, :password_confirmation) %>
          </div>

          <div class="form-group">
            <%= f.submit "Create Account", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>

      <div class="text-center mb-5">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
